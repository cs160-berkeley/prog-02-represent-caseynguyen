<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/welcome_phone"
    tools:context=".MainActivity" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true">
        <EditText
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="25dp"
            android:id="@+id/enterZIPCode"
            android:text="12345"
            android:textColor="#111"
            android:textSize="24dp"
            android:numeric="integer"
            android:background="#2350EA"
            android:textAlignment="center"
            android:paddingBottom="10dp"
             />
        <Button
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="25dp"
            android:text="GO!"
            android:onClick="toScreen2FromZIP"
            android:id="@+id/ZIPButton"
            android:layout_toRightOf="@+id/enterZIPCode"
            android:background="#2350EA"
            android:textSize="22dp" />


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Current_Location"
            android:onClick="toScreen2FromCurrentLocation"
            android:id="@+id/CurrentLocationButton"
            android:textColor="#fcfbfb"
            android:background="#2350EA"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/enterZIPCode"
            android:layout_alignParentEnd="false"
            android:layout_marginTop="32dp"
            android:textSize="18dp"/>

    </RelativeLayout>

</RelativeLayout>



