<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"

    >


    <ImageView
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:layout_marginRight="00dp"
        android:adjustViewBounds="true"
        android:src="@drawable/screen2_divider3"
        android:padding="0dp"
        android:layout_alignEnd="@+id/item_Tweet"
        android:id="@+id/imageView" />



    <ImageView
        android:id="@+id/item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="5dp"
        android:maxHeight="150dp"
        android:maxWidth="150dp"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:src="@drawable/boxer" />
    <ImageView
        android:id="@+id/item_logo"
        android:layout_width="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginTop="25dp"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:adjustViewBounds="true"
        android:padding="0dp"
        android:src="@drawable/demlogo11"
        android:layout_below="@+id/item_CongressType"
        android:layout_alignEnd="@+id/imageView" />

    <TextView
        android:id="@+id/item_CongressType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:text="Representative"
        android:textSize="15sp"
        android:padding="0dp"

        android:textColor="#000000"        />

    <TextView
        android:id="@+id/item_Party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="150dp"
        android:textSize="15sp"
        android:text="Democrat"
        android:padding="0dp"

        android:textColor="#000000" />

    <TextView
        android:id="@+id/item_Website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="150dp"
        android:textSize="12sp"
        android:textColor="#000000"
        android:padding="0dp"

        android:text="senator@feinstein.senate.gov" />

    <TextView
        android:id="@+id/item_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="150dp"
        android:textSize="12sp"
        android:textColor="#000000"
        android:padding="0dp"

        android:text="www.feinstein.senate.gov" />

    <TextView
        android:id="@+id/item_Tweet"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="150dp"
        android:textSize="10sp"
        android:padding="0dp"

        android:text="Last Tweet from Diane Feinstein is GO DUBs!!!................"
        android:layout_alignEnd="@+id/item_CongressType" />

    <TextView
        android:id="@+id/item_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diane Feinstein"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:padding="0dp"

        android:textColor="#000000" />




</RelativeLayout>