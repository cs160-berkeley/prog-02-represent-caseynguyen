<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen3_background5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:text="BACK"
            android:layout_marginTop="10dp"
            android:onClick="Screen3Close"
            android:padding="1dp"
            android:id="@+id/scr2BackButton"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/detail_Name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/scr2BackButton"
            android:layout_marginLeft="20dp"
            android:text="Barbara Boxer"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:textColor="#ffffff"

            android:textSize="30sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/scr3_item_logo"
            android:layout_width="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_marginTop="60dp"
            android:maxHeight="60dp"
            android:maxWidth="60dp"
            android:adjustViewBounds="true"
            android:src="@drawable/demlogo1"
            android:layout_alignParentRight="true"
            android:padding="0dp"

            />


        <ImageView
            android:id="@+id/detail_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:maxHeight="180dp"
            android:maxWidth="180dp"
            android:adjustViewBounds="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/boxer"
            android:layout_gravity="center_horizontal" />
    </RelativeLayout>


    <LinearLayout


    android:layout_width="match_parent"
        android:orientation="vertical"

        android:layout_height="match_parent"
        android:layout_marginTop="1dp"


        >



        <TextView
            android:id="@+id/detail_CongressType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:text="Representative"
            android:layout_gravity="center_horizontal"
            android:textColor="#000000"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/detail_Party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:textColor="#000000"
            android:text="Democrat" />


        <TextView
            android:id="@+id/detail_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:textColor="#000000"
            android:text="senator@feinstein.senate.gov" />

        <TextView
            android:id="@+id/detail_website"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:textColor="#000000"
            android:text="website@feinstein.senate.gov" />

        <TextView
            android:id="@+id/detail_EndofTerm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:textColor="#000000"
            android:paddingLeft="2dp"
            android:text="02/28/2018" />


        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="2dp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="Commitee:" />


        <TextView
            android:id="@+id/detail_Committee"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:paddingLeft="2dp"
            android:textColor="#878383"
            android:textAlignment="center"
            android:gravity="center"
            android:text="The Wild Thang Committee" />

        <TextView
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="15sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:paddingLeft="2dp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="Bills Sponsored:" />


        <TextView
            android:id="@+id/detail_BillSponsored"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"
            android:textColor="#878383"
            android:gravity="center"
            android:text="S. 2552: Interstate Threats Clarification Act of 2016" />



    </LinearLayout>




</LinearLayout>
