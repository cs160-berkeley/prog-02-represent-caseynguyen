<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="0dp"
            android:maxHeight="100dp"
            android:maxWidth="100dp"
            android:adjustViewBounds="true"
            android:src="@drawable/start_frame"
            android:id="@+id/item_icon"
            android:layout_gravity="center"
            android:layout_alignParentStart="false" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:text="R"
        android:id="@+id/src2_next"
        android:layout_gravity="bottom"
        android:padding="0dp"
        android:textSize="10dp"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="60dp"
        android:onClick="OnClickNextPerson"
        android:background="#f80101" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="L"
            android:id="@+id/src2_prev"
            android:layout_gravity="bottom"
            android:padding="0dp"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="80dp"
            android:onClick="OnClickPrevPerson"
            android:background="#0139f2" />
        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="U"
            android:id="@+id/src2_up"
            android:layout_gravity="bottom"
            android:padding="0dp"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="100dp"
            android:onClick="OnClickPrevPerson"
            android:background="#f80101" />

        <Button
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="D"
            android:id="@+id/src2_down"
            android:layout_gravity="bottom"
            android:padding="0dp"
            android:textSize="10dp"
            android:gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="120dp"
            android:onClick="OnClickNextPerson"
            android:background="#0139f2" />


        <TextView
            android:id="@+id/item_Name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Rep Name"
            android:textSize="22sp"
            android:textColor="#ffff"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="false"
            android:layout_alignStart="@+id/src2_next" />
        <TextView

        android:id="@+id/item_Party"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:text="Democrat"
        android:textColor="#ffff"
            android:textAlignment="center"
            android:layout_below="@+id/item_Name"
            android:layout_alignStart="@+id/item_Name" />




    </RelativeLayout>



</RelativeLayout>
