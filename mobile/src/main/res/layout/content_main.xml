<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.caseynguyen.prog02_b.MainActivity"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_alignParentBottom="true">
    <EditText
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:paddingLeft="100dp"
        android:paddingTop="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:id="@+id/enterZIPCode"
        android:text="12345"
        android:background="#d2b6b6" />
    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Enter"
        android:onClick="toScreen2FromZIP"
        android:id="@+id/ZIPButton"
        android:layout_toRightOf="@+id/enterZIPCode" />


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Current_Location"
                android:onClick="toScreen2FromCurrentLocation"
                android:id="@+id/CurrentLocationButton"
                android:textColor="#fcfbfb"
                android:background="#405091"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>

